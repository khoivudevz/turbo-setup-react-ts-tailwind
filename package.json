{
	"name": "turbo-setup-react-ts-tailwind",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port 8000 --mode dev",
		"dev:stg": "vite --port 8000 --mode stg",
		"dev:prod": "vite --port 8000 --mode prod",
		"build": "tsc -b && vite build --mode prod",
		"build:stg": "tsc -b && vite build --mode stg",
		"build:dev": "tsc -b && vite build --mode dev",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview --port 8000",
		"prepare": "husky"
	},
	"dependencies": {
		"axios": "^1.7.9",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.13",
		"prettier": "^3.4.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router-dom": "^7.1.1",
		"tailwind-merge": "^2.6.0",
		"zustand": "^5.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/js": "^9.17.0",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.16",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"i18next": "^24.2.2",
		"lint-staged": "^15.3.0",
		"postcss": "^8.4.49",
		"react-i18next": "^15.4.1",
		"tailwindcss": "^3.4.17",
		"typescript": "~5.6.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^6.0.5",
		"vite-plugin-preload": "^0.4.2"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"bun prettier --write"
		]
	}
}
